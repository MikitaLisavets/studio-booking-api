{
  "name": "fullstack-app",
  "version": "1.0.0",
  "description": "fullstack app starter",
  "author": "Mikita Lisavets <mikita.lisavets@gmail.com>",
  "license": "ISC",
  "scripts": {
    "lint": "npm run client:lint && npm run server:lint",
    "client:lint": "eslint client/src/ --ext .js,.jsx,.ts,.tsx",
    "client:build": "npm run build --prefix client",
    "client:test": "npm run test --prefix client",
    "client:dev": "npm run start --prefix client",
    "server:lint": "eslint server/src/ --ext .js,.jsx,.ts,.tsx",
    "server:build": "npm run build --prefix server",
    "server:test": "npm run test --prefix server",
    "server:dev": "npm run dev --prefix server",
    "server:start": "npm run start --prefix server"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0"
  },
  "dependencies": {
    "client": "file:client",
    "server": "file:server"
  }
}
